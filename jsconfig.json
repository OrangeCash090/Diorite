{
    "compilerOptions": {
        "target": "ES6", // Specifies the JavaScript version (e.g., ES6, ES2020).
        "module": "commonjs", // Use CommonJS modules (for Node.js projects).
        "checkJs": true, // Enable error checking in JavaScript files.
        "baseUrl": ".", // Base directory for resolving paths.
        "paths": { // Optional: Define path aliases for imports.
            "@utils/*": [
                "src/utils/*"
            ],
            "@classes/*": [
                "src/lib/classes/*"
            ]
        }
    },
    "include": [
        "src/**/*.js", // Include all JavaScript files in the 'src' directory.
        "index.js" // Include the entry point of your project.
        ,
        "src/lib/classes/client.js"
    ]
}